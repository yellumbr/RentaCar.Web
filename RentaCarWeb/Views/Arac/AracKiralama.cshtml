
@{
    ViewBag.Title = "Araç Kirala";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="header">
            <h4 class="title">Kiralama İşlemleri</h4>
        </div>
        <div class="content">
            <form>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Plaka</label>
                            <select class="form-control">
                                <option value="kullanıcı1">plaka1</option>
                                <option value="kullanıcı2">plaka2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Kullanıcı Adı</label>
                            <select class="form-control">
                                <option value="kullanıcı1">Kullanıcı1</option>
                                <option value="kullanıcı2">kullanıcı2</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Araç Teslim Alma Tarihi</label>
                            <input type="datetime-local" class="form-control" placeholder="Araç Teslim Alma Tarihi">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Araç Teslim Etme Tarihi</label>
                            <input type="datetime-local" class="form-control" placeholder="Araç Teslim Etme Tarihi">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Kiralama Bedeli</label>
                            <input type="text" class="form-control" placeholder="Kiralama Bedeli">
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info btn-fill pull-right">Kirala</button>
                <div class="clearfix"></div>
            </form>
        </div>
    </div>
</div>



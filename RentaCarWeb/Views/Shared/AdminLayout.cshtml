<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    

    <!-- Bootstrap core CSS     -->
    <link href="~/Content/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/Content/Admin/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/Content/Admin/assets/css/light-bootstrap-dashboard.css?v=1.4.0" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/Admin/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
    
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="purple">

            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="./Kullanici" class="simple-text">
                        Yellumbr
                    </a>
                </div>

                <ul class="nav">

                   
                    <li class="dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="pe-7s-user"></i>
                            <p>
                                Kullanıcı İşlemleri
                                <b class="caret"></b>
                            </p>

                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="renkDegis" href="/Kullanici">Kullanıcı Listele</a></li>
                            <li><a class="renkDegis" href="/Kullanici/Sil">Kullanıcı Sil</a></li>
                            <li><a class="renkDegis" href="/Kullanici/Duzenle">Kullanıcı Düzenle</a></li>
                            <li><a class="renkDegis" href="/Kullanici/MusteriEkle">Müşteri Ekle</a></li>
                            <li><a class="renkDegis" href="/Kullanici/YoneticiEkle">Yönetici Ekle</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="/Admin/Rapor">
                            <i class="pe-7s-note2"></i>
                            <p>Rapor</p>
                        </a>
                    </li>
                    <li>
                        <a href="/Admin/Rezerve">
                            <i class="pe-7s-bell"></i>
                            <p>Rezerve İşlemleri</p>
                        </a>
                    </li>
                    <li class="active">
                    <li class="dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="pe-7s-news-paper"></i>
                            <p>
                                Araç İşlemleri
                                <b class="caret"></b>
                            </p>

                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="renkDegis" href="/Arac/Ekle">Araç Ekle</a></li>
                            <li><a class="renkDegis" href="/Arac/Sil">Araç Sil</a></li>
                            <li><a class="renkDegis" href="/Arac/Duzenle">Araç Güncelle</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Admin/Kiralama">
                            <i class="pe-7s-science"></i>
                            <p>Kiralama İşlemleri</p>
                        </a>
                    </li>

                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" id="yazi" href="#">@ViewBag.Title</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-dashboard"></i>
                                </a>
                            </li>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="">
                                    Anasayfa
                                </a>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="">
                                    Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>


            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Home
                                </a>
                            </li>

                        </ul>
                    </nav>
                   
                </div>
            </footer>

        </div>
    </div>


</body>

<!--   Core JS Files   -->
<script src="~/Content/Admin/assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="~/Content/Admin/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Charts Plugin -->
<script src="~/Content/Admin/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="~/Content/Admin/assets/js/bootstrap-notify.js"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="~/Content/Admin/assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

<link href="~/Content/Admin/assets/css/style.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.js"></script>


</html>